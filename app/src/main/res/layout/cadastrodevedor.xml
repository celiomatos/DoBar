<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fundo" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:id="@+id/lytbotoesacoes"
            layout="@layout/botoesdeacao" />

        <TextView
            style="@style/styleText"
            android:layout_gravity="center"
            android:background="@color/darkgray"
            android:text="@string/caddevedor"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            style="@style/styleText"
            android:text="@string/nome" />

        <EditText
            android:id="@+id/edtdevnome"
            style="@style/styleEdit"
            android:enabled="false"
            android:inputType="text" />

        <TextView
            style="@style/styleText"
            android:text="@string/telefone" />

        <EditText
            android:id="@+id/edtdevtel"
            style="@style/styleEdit"
            android:enabled="false"
            android:inputType="phone" />

        <TextView
            style="@style/styleText"
            android:text="@string/email" />

        <EditText
            android:id="@+id/edtdevemail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:enabled="false"
            android:inputType="textEmailAddress" />

        <include layout="@layout/groupativo" />
    </LinearLayout>

</ScrollView>